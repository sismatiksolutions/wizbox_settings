<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_oob_main_new"
    android:orientation="horizontal" >
 <ScrollView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            >
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="110dp"
        android:gravity="right"
        android:orientation="vertical" >
       
<LinearLayout
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
                    android:id="@+id/image_network"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ok"
                    android:layout_marginTop="33dp" 
                    android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingRight="10dp"
            android:text="Network"
            android:textColor="#ffffff"
            android:textSize="24sp" />
</LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/disp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Display"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Applications"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/wacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="WizBox Account"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/gacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Google Account"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/net_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Network Test"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/vid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Video Test"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />

        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="System Setting"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />
          <TextView
            android:id="@+id/remote_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:text="Remote Access"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:background="#808080" />
    </LinearLayout>
</ScrollView>
   <LinearLayout
        android:id="@+id/myll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="85dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="92dp"
        android:background="@drawable/opback"
        android:orientation="horizontal"
        android:visibility="invisible" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                 >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ok" />

                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Installed"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/no" />

                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Not Installed"
                    android:textColor="#ffffff"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout> 
         <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:text="List Of Required Application"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/myll2"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             >

            <ListView
                android:id="@android:id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
 </LinearLayout> 
 
       
    </LinearLayout>
</LinearLayout>

